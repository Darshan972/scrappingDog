{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2019",
		"lib": ["es2019", "dom"],
		"outDir": "./dist",
		"rootDir": "./",
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"types": ["node"]
	},
	"include": [
		"index.ts",
		"credentials/**/*",
		"nodes/**/*",
		"nodes/**/*.json",
		"package.json",
	],
	"exclude": ["node_modules", "dist"]
}
